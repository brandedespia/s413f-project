<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_grey"
    tools:context=".MainActivity">

    <!-- 菜单圆形按钮 -->

    <!-- Tutor 面板（占一半宽度） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_for_menu"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="left|clip_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/blackcircle">


        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.476"
            app:srcCompat="@drawable/menu_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/Tutor_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:color="@color/light_grey"
        android:background="@drawable/border_layout">

        <TextView
            android:id="@+id/Tutor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/Tut_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your progress:"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/Tut_Con_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/Tut_select_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Lesson"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/Tut_reset_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Tutorial Progress" />
    </LinearLayout>

    <!-- Puzzle 面板（占一半宽度） -->
    <LinearLayout
        android:id="@+id/Puzzle_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/border_layout">

        <TextView
            android:id="@+id/Puzzle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puzzle"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/Puz_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your progress:"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/Puz_Con_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/Puz_select_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Puzzle"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/Puz_reset_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Puzzle Progress" />
    </LinearLayout>

</LinearLayout>
