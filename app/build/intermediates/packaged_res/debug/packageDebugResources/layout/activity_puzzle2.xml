<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/puzzle_main_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_grey"
    tools:context=".PuzzleActivity2">



    <!-- Puzzle Content Layout -->
    <LinearLayout
        android:id="@+id/puzzle_content_layout_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="-73dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:paddingStart="121dp"
        android:background="@color/light_grey">

        <!-- Menu Button Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_for_menu_puzzle_2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_gravity="left|clip_vertical"
            android:background="@drawable/blackcircle">

            <ImageButton
                android:id="@+id/menu_btn_puzzle_2"
                android:layout_width="53dp"
                android:layout_height="52dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu_btn" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/puzzle_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puzzle Challenge 2"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/puzzle_description_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the correct tiles to Tenpai!"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 14 buttons displayed horizontally -->
        <LinearLayout
            android:id="@+id/puzzle_buttons_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Button 1 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_1"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man3"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 2 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_2"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man4"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 3 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_3"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man4"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 4 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_4"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man4"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 5 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_5"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man5"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 6 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_6"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/man5"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 7 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_7"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin5"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 8 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_8"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin5"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 9 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_9"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin6"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 10 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_10"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin6"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 11 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_11"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin7"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 12 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_12"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin7"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 13 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_13"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin8"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

            <!-- Button 14 -->
            <ImageButton
                android:id="@+id/puzzle2_btn_14"
                android:layout_width="42dp"
                android:layout_height="56dp"
                android:src="@drawable/pin9"
                android:scaleType="fitXY"
                android:background="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

