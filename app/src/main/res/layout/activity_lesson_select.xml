<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lesson_select_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_grey"
    tools:context=".LessonSelectActivity">

    <!-- Menu Button Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_for_menu_lesson_select"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="left|clip_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/blackcircle">

        <ImageButton
            android:id="@+id/menu_btn_lesson_select"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lesson Selection Content Layout -->
    <LinearLayout
        android:id="@+id/lesson_select_content_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:background="@color/light_grey">

        <TextView
            android:id="@+id/lesson_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Tutorial Lesson"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Lesson 1 Button -->
                <Button
                    android:id="@+id/lesson_1_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lesson 1: Introduction to Mahjong"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Lesson 2 Button -->
                <Button
                    android:id="@+id/lesson_2_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lesson 2: Advanced Techniques"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Lesson 3 Button -->
                <Button
                    android:id="@+id/lesson_3_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lesson 3: Expert Strategies"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Placeholder for more lessons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More lessons coming soon..."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="24dp" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/back_to_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</LinearLayout>

