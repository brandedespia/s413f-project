<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_grey"
    tools:context=".TutorialActivity">

    <!-- Menu Button Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_for_menu_tutorial"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="left|clip_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/blackcircle">

        <ImageButton
            android:id="@+id/menu_btn_tutorial"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tutorial Content Layout -->
    <LinearLayout
        android:id="@+id/tutorial_content_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:background="@color/light_grey">

        <TextView
            android:id="@+id/tutorial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial Lesson 1"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/tutorial_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the first tutorial lesson!\n\nHere you will learn the basics of Mahjong.\n\nLet's get started!"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/tutorial_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|end"
            android:text="Next"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />
    </LinearLayout>

</LinearLayout>

